#!/usr/bin/env ruby

require 'bundler/setup'
require 'irb'
require './lib/irb_patch'
require './lib/stemcell'

name = ARGV[0] || 'console'
port = ARGV[1] || 9884

stemcell "#{name}.tomair.local", "127.0.0.1", port

#Door = DCell::Node.find("door.tomair.local").find(:door_actor)

IRB.start_session(binding)
